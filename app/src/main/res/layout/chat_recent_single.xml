<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="@drawable/date_background"
    android:backgroundTint="#FDFDFD"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_default"
        android:layout_width="68dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:visibility="visible"
        tools:srcCompat="@tools:sample/avatars[0]"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/name_chat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="@android:string/unknownName"
        android:textAlignment="viewStart"
        android:textColor="#0F0F0F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/last_msg_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_chat_user"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif"
        android:maxWidth="300dp"
        android:maxHeight="23dp"
        android:text="message"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/last_msg_single"
        android:layout_marginTop="3dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/time_last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="3dp"
        android:text="TextView"
        android:textColor="#27AD30" />

    <ImageView
        android:id="@+id/crop_circle"
        android:layout_width="71dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/circle" />


</RelativeLayout>