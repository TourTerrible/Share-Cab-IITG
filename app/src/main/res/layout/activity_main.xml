<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/etname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="435dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="Enter your display Name"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:visibility="visible" />


    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etname"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="-95dp"
        android:backgroundTint="#079632"
        android:text="Submit"
        android:textColor="#EBE6E6"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvresult"
        android:layout_width="398dp"
        android:layout_height="65dp"
        android:layout_above="@+id/btnsubmit"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="146dp"
        android:text="Welcome to Share-Cab"
        android:textAlignment="center"
        android:textColor="#010101"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="-403dp"
        android:text="One Time registration by name "
        android:textAlignment="center"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:layout_above="@+id/tvresult"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-39dp"
        android:layout_marginBottom="4dp"
        app:srcCompat="@drawable/share_cab_logo" />

    <Spinner
        android:id="@+id/gender"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp" />

    <View
        android:id="@+id/divider11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/tvresult"
        android:layout_marginBottom="-55dp"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="92dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="271dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/save_money" />

</RelativeLayout>